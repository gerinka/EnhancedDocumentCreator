@{
    ViewBag.Title = "Писане";
}
<div class="panel panel-primary">
  <div class="panel-heading"><h3 class="panel-title">Увод</h3></div>
  <div class="panel-body">
      <form class="form-horizontal">
        <div class="form-group">
          <label for="subtitle" class="col-lg-2 label-panel control-label">Подсекция</label>
          <div class="col-lg-9">
            <input type="text" class="form-control" id="subtitle" placeholder="Заглавие..." value="Цел и задачи на дипломната работа" />
          </div>
        </div>
        <div class="form-group">
          <label for="maintext" class="col-lg-2 label-panel control-label">Основен текст</label>
          <div class="col-lg-9">
            <textarea class="form-control" rows="20" id="maintext"></textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-11">
            <button type="button" class="btn btn-primary pull-right">
              <span class="glyphicon glyphicon-save" aria-hidden="true"></span> Запазване
            </button>
          </div>
        </div>
      </form>
  </div>
</div>
  @section scripts{
    @Scripts.Render("~/bundles/common")
  }
