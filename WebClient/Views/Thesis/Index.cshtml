@{
    ViewBag.Title = "Home Page";
}
<div class="span11">
    <h2>Demo</h2>
    <p>Basic Demo Example.</p>
    <div id="rootwizard">
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container">
                    <ul class="nav nav-pills">
                        <li class="active"><a href="#tab1" data-toggle="tab">Задай тема</a></li>
                        <li class="invisible"><a href="#tab2" data-toggle="tab">Избери структура</a></li>
                        <li class="invisible"><a href="#tab3" data-toggle="tab">Избери структура II</a></li>
                        <li class="invisible"><a href="#tab4" data-toggle="tab">Генериране на задачи</a></li>
                    </ul>
                </div>
            </div>
        </div>
        
        <div class="tab-content">
            <div class="tab-pane active" id="tab1">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="mainTopic" class="col-sm-2 control-label">Въведи тема</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="mainTopic" placeholder="Заглавие">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="mainTopic" class="col-sm-2 control-label">Въведи краен срок</label>
                        <div class="col-sm-3">
                            <div class='input-group date' id='deadline'>
                                <input type='text' class="form-control"/>
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="templateDropdown" class="col-sm-2 control-label">Избери шаблон</label>
                        <div class="col-sm-10">
                            <div class="dropdown">
                                <button class="btn btn-default dropdown-toggle" type="button" id="templateDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    Избери
                                    <span class="caret"></span>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="templateDropdownMenu">
                                    <li><a href="#">Дипломен софтуерен проект</a></li>
                                    <li class="disabled"><a href="#">Спецификация на софтуерни изисквания</a></li>
                                    <li role="separator" class="divider"></li>
                                    <li class="disabled"><a href="#">Други шаблони...</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="tab-pane" id="tab2">
                2
            </div>
            <div class="tab-pane" id="tab3">
                3
            </div>
            <div class="tab-pane" id="tab4">
                4
            </div>
            </div>
            <ul class="pager wizard">
                <li class="previous first" style="display:none;"><a href="javascript:;">Първи</a></li>
                <li class="previous"><a href="javascript:;">Назад</a></li>
                <li class="next last" style="display:none;"><a href="javascript:;">Последен</a></li>
                <li class="next"><a href="javascript:;">Напред</a></li>
            </ul>
        <div id="bar" class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/common")
}